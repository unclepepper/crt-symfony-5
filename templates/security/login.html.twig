{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}
            <a class="me-3 py-2" href="{{path('app_register')}}"> go registration</a> 
        </div>
        
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
         <p>   
             <a class="me-3 py-2" href="{{path('app_logout')}}">Выйти из акаунта  {{ app.user.username }}</a> 
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Войдите в систему или <a class="me-3 py-2" href="{{path('app_register')}}"> зарегистрируйтесь</a></h1>
    <label for="inputEmail" class="mb-2">Email</label>
    <input type="email" value="{{ last_username }}" style="width:400px;" name="email" id="inputEmail" class="form-control mb-3" autocomplete="email" required autofocus>
    <label for="inputPassword" class="mb-2">Password</label>
    <input type="password" name="password" style="width:400px; id="inputPassword" class="form-control " autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-lg btn-primary mt-3" type="submit">
        Sign in
    </button>
</form>
{% endblock %}
